<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
</head>
<body>
    <div class="w-full h-full bg-zinc-900 p-10 text-white">
        <div class="nav mb-10">
            <a class="text-blue-500" href="/">Back to Home</a>
        </div>
        <h1 class="text-3xl tracking-tighter mb-3">All User</h1>
        <div class="users flex flex-wrap gap-3">
            <% if(users.length<=0){ %>
                <h1>No User Found</h1>
            <% } else { %>
            <% users.forEach(function(user){ %>
                <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                    <div class="w-full bg-zinc-700 rounded-lg h-52 overflow-hidden">
                        <img class="w-full h-full object-cover object-top" src="<%= user.image %>" alt="">
                    </div>
                    <h3 class="text-xl mt-3 tracking-tighter"><%= user.name %></h3>
                    <h5 class="text-zinc-500"><%= user.email %></h5>
                    <div class="flex mt-10 gap-3">
                        <a class="text-zinc-200" href="/edit/<%= user._id %>">Edit User</a>
                        <a class="text-red-500" href="/delete/<%= user._id %> ">Delete User</a>
                    </div>
                </div>
            <% }) %>
            <% } %>     
            
            
            
            
            
        </div>
        
    </div>
</body>
</html>